extends ../../layouts/default.pug

block main
  h1(class="mb-4") Thông tin user

  if (user.avatar)
    img(src=user.avatar width="150px" class="mb-3")

  if (user.fullName)
    p Họ tên: <b>#{user.fullName}</b>

  if (user.email)
    p Email: <b>#{user.email}</b>

  if (user.phone)
    p Số điện thoại: <b>#{user.phone}</b>

  if (role.title)
    p Phân quyền: <b>#{role.title}</b>
  
  p 
    span Trạng thái: 
    span
      <b>#{user.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>
  
  a(
    href=`${prefixAdmin}/profile/edit`
    class="btn btn-primary" 
  ) Chỉnh sửa thông tin